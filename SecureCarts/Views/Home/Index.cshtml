@model SecureCarts.Models.TestNikeCom
@{
    ViewBag.Title = "Home Page";
}

<div ng-app="secureCartsApp" ng-controller="secureCartController">

    <form action='\Home\Index' method="post">

        <label for="Url">Url:</label>
        @Html.EditorFor(m => m.Url)

        <input type="submit" value="Test Nike Site" />

    </form>
    
    <label ng-bind="hello"></label>
    
    <div class="col-sm-12">

        @if (Model.ResponseData != null)
        {
            <div class="col-sm-12">
                <pre>@Model.ResponseData.Content</pre>
            </div>

            <table>
                @foreach (var m in Model.ResponseData.Headers)
                {
                    <tr>
                        <th>@m.Key</th>
                        <td>@m.Value</td>
                    </tr>
                }
                @foreach (var m in Model.ResponseData.Cookies)
                {
                    <tr>
                        <th>Cookie *</th>
                        <td>@m.ToString()</td>
                    </tr>
                }
            </table>
        }
    </div>

</div>

@section scripts{    
    @Scripts.Render("~/bundles/secureCartAppJs")    
}